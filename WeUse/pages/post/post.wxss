/* pages/post/post.wxss */
.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}

.form-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.input {
  width: 90%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.image-upload {
  display: flex;
  align-items: center;
}

.image-placeholder {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}

.upload-button {
  width: 100rpx;
  height: 100rpx;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #aaa;
  border: 1rpx dashed #ccc;
  border-radius: 5rpx;
}

.picker {
  width: 100%;
}

.picker-view {
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.info-text {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #555;
}

.post-button {
  width: 100%;
  padding: 15rpx;
  background-color: gold;
  text-align: center;
  font-size: 36rpx;
  color: #000;
  border-radius: 10rpx;
  font-weight: bold;
}

.footer {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.nav-item {
  text-align: center;
}

.text_input {
  display: flex;
  text-align:start;
  align-items: flex-start;
}

.label_text {
  font-size: 60rpx;
  height: 40rpx;
  display: flex;
  align-items: flex-end;
  margin-top: 40rpx;
  margin-bottom: -40rpx;
}

.container {
  padding: 20rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.cover-photo-label {
  position: absolute;
  top: -40rpx;
  left: 200rpx;
  font-size: 20rpx;
  color: green;
  text-align: center;
}

.image-box {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #ccc;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.item-image, .add-image-icon {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  color: red;
  font-weight: bold;
  background: white;
  border-radius: 50%;
  padding: 4rpx 10rpx;
}

.img-index {
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 24rpx;
  background-color: #fff;
  padding: 2rpx 6rpx;
}

.input-box, .picker-box {
  width: 100%;
  border: 2rpx solid gold;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.textarea-box {
  border: 2rpx solid #00cc00;
  border-radius: 8rpx;
  padding: 12rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.price-box {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.currency {
  font-size: 30rpx;
  color: orange;
  font-weight: bold;
}

.price-input {
  flex: 1;
  margin-left: 10rpx;
  border: none;
  border-bottom: 1px solid #ccc;
  font-size: 28rpx;
}

.submit-btn {
  background-color: #00ccaa;
  color: #000;
  font-weight: bold;
  font-size: 32rpx;
  border-radius: 12rpx;
  padding: 16rpx 0;
}