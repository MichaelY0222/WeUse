/* pages/redeem/redeem.wxss */
.card {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: auto;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.image-scroll {
  width: 675rpx; 
  height: 675rpx;
  display:flex;
  white-space: nowrap;
  overflow-x: scroll;
}
.image {
  width: 675rpx;
  height: 675rpx;
}
.price-tag {
  position: absolute;
  top: 930rpx;
  left: 39rpx;
  background-color: #FFD600;
  padding: 10rpx 20rpx;
  border-radius: 0rpx;
  display: flex;
  align-items: center;
  width: 260rpx;
  height:100rpx;
}
.price-image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensure the image covers the entire button */
}
.image-number {
  position: relative;
  z-index: 1;
  top: -70rpx;
  font-size: 28rpx;
  left: 280rpx;
  color: #000000;
  width: 100rpx;
  height: 40rpx;
  background-color: #F9E4AA;
  border-radius: 200rpx;
  text-align: center;
  font-weight: bold;
  padding-top: -2rpx;
}
.price-text {
  position: absolute;
  left: 96rpx;
  top: 22rpx;
  font-size: 64rpx;
  color: #FFFFFF;
  font-weight: bold;
  z-index: 1;
}
.green-text {
  color: #93BF66;
}
.yellow-text {
  color: #EBC542;
}
.seller-info {
  position:relative;
  display: flex;
  align-items: center;
  right:-360rpx;
  margin-top: 20rpx;
}
.profile-pic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-right: -110rpx;
  z-index: 1;
}
.verified-seller {
  display: flex;
  flex-direction: column;
  position: relative;
}
.verified-text {
  font-size: 22rpx;
  color: #4CAF50;
  position: relative;
}
.seller-name {
  font-size: 24rpx;
  font-weight: bold;
  position: relative;
  left: 100rpx;
  padding-left: 20rpx;
  text-align: justify;
  width: 160rpx;
}
.seller-role {
  font-size: 24rpx;
  color:white;
  font-weight: bold;
  position: relative;
  left: 75rpx;
  background-color: #FFD600;
  height: 40rpx;
  padding-top: 8rpx;
  padding-left: 45rpx;
  text-align: justify;
  border-radius: 100rpx;
  width: 160rpx;
}
.item-details {
  margin-top: 20rpx;
}
.horizontal-line {
  width: 88%;  /* Full width */
  height: 1px;  /* Line thickness */
  background-color: grey;  /* Grey color */
  margin: 10rpx 40rpx -40rpx;  /* Optional: Adds space above and below the line */
}
.item-name {
  font-size: 42rpx;
  font-weight: bold;
  margin-left: 60rpx;
  margin-right: 60rpx;
  display: -webkit-box; /* Display as a flexbox for the clamp to work */
  overflow: hidden; /* Ensure content outside the box is hidden */
  -webkit-line-clamp: 2; /* Limit to 2 lines */
  -webkit-box-orient: vertical; /* Set the box orientation to vertical */
  word-wrap: break-word; /* Ensure long words break to the next line */
  text-overflow: ellipsis; /* Add ellipsis for overflow */
}
.additional-info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.info-title {
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
  margin-left: 60rpx;
}
.info-content {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 80rpx;
  margin-right: 80rpx;
}
.item-description {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 80rpx;
  margin-right: 80rpx;
}
.buttonWithImage {
  background: transparent;
  max-width: 320rpx;
  height: 140rpx;
  padding: 0; /* Remove padding */
}
.buttonImageBackground {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensure the image covers the entire button */
}
.buttonWithImage:active {
  transform: scale(0.95);
}
.likebutton {
  position: fixed;
  left: 40rpx;
  bottom: 20rpx;
}
.buybutton {
  position: fixed;
  right: 40rpx;
  bottom: 20rpx;
}
.bottomcontainer {
  background-color: #FFFFFF;
  content:"aa";
  width: 1000rpx;
  height: 180rpx;
  position: fixed;
  bottom: 0rpx;
  left:0;
  z-index:2;
}