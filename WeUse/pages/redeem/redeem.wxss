/* pages/redeem/redeem.wxss */
.card {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: auto;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.item-image {
  width: 100%;
  height: 400rpx;
}
.price-tag {
  position: absolute;
  top: 350rpx;
  left: 20rpx;
  background-color: #FFD600;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.price-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
}
.seller-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.profile-pic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.verified-seller {
  display: flex;
  flex-direction: column;
}
.verified-text {
  font-size: 22rpx;
  color: #4CAF50;
}
.seller-name, .seller-role {
  font-size: 20rpx;
}
.item-details {
  margin-top: 20rpx;
}
.item-name {
  font-size: 32rpx;
  font-weight: bold;
}
.item-description {
  font-size: 24rpx;
  color: #666666;
}
.additional-info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.info-title {
  font-size: 22rpx;
  color: #666666;
}
.info-content {
  font-size: 26rpx;
  color: #FF8C00;
  font-weight: bold;
}