/* pages/index/index.wxss */
.footnotes{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  position: fixed;
  text-align: center;
  bottom: 30rpx;
  left: 0;
  right: 0;
}

.search{
  border-radius: 10px;
  background-color: #ececec;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 12pt;
  font-weight: bold;
  width: 89%;
  margin: 0 3%;  
  padding: 5px;
  padding-left: 20px;
  text-align: left;
  align-items: center;
}

.itemRow{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 3%;
}

.item{
  border-radius: 8px;
  border: 1px solid black;
  width: 45vw;
  margin-bottom: 10px;
}

.itemScroll{
  height: 75vh;
}

.itemText{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 18px;
  font-weight: bold;
  padding-top: 10px;
  margin-left: 10px;
}

.itemImage{
  width: 40vw;
  height: 23vh;
}

.filterMenu{
  width: 20vw;
  height: 1vh;
  margin-top: 5px;
}

.filterText{
  width: 20vw;
  height: 1vh;
  margin-top: -40px;
}

.smallSpace{
  height: 40px;
}

.noResultsImage{
  height: 55vh;
  width: 60vh;
}