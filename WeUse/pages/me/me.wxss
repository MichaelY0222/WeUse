/* pages/me/me.wxss */

/* Footer Section */
#main-menu-footer {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 10px;
  width: 100%;
  padding: 0 16px;
  box-sizing: border-box;
  align-items: center;
}

.main-menu-registration-information {
  font-size: 17px;
  color: var(--secondary);
  margin: 0 31px;
}

#main-menu-registration-button {
  margin-top: 11px;
  color: var(--link);
  font-size: 17px;
}

#version-footer {
  color: var(--secondary);
  display: block;
  text-align: center;
  padding-top: 16px;
  font-size: 17px;
}

/* Profile Box */
.profileBox {
  display: flex;
  align-items: center;
  padding: 16px;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 10px;
}

.nameBadge {
  flex: 1;
}

.nickname {
  font-weight: bold;
  font-size: 18px;
}

.tag {
  display: inline-block;
  background-color: #FFD700;
  color: black;
  border-radius: 5px;
  padding: 2px 8px;
  font-size: 13px;
  margin-top: 4px;
}

.verifiedBadge {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: green;
  margin-left: auto;
}

.checkIcon {
  width: 20px;
  height: 20px;
  margin-right: 4px;
}

/* Input Fields */
.inputField {
  display: flex;
  align-items: center;
  margin: 8px 16px;
  border: 2px solid gold;
  border-radius: 6px;
  padding: 4px 10px;
}

.inputField input {
  flex: 1;
  font-size: 15px;
  border: none;
  outline: none;
}

.editIcon {
  width: 16px;
  height: 16px;
  margin-left: 6px;
}

/* Disabled (locked) fields */
.inputField.disabled {
  opacity: 0.5;
}

/* Stats Section */
.statsSection {
  margin: 16px;
}

.statRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.viewBtn {
  background-color: #FFD700;
  border: none;
  border-radius: 5px;
  padding: 3px 10px;
  font-size: 14px;
}

/* Favorites Section */
.favoritesSection {
  margin: 16px;
}

.favHeader {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.starIcon {
  width: 18px;
  height: 18px;
  margin-right: 6px;
}

.tableHeader, .tableRow {
  display: flex;
  align-items: center;
  padding: 4px 0;
}

.tableHeader {
  font-weight: bold;
  border-bottom: 1px solid #ccc;
}

.tableRow {
  border-bottom: 1px solid #eee;
}

.colName {
  width: 30%;
  padding-left: 8px;
}

.colSeller {
  width: 25%;
  display: flex;
  align-items: center;
}

.colStatus {
  width: 20%;
  color: green;
}

.colAction {
  width: 25%;
  display: flex;
  justify-content: space-around;
}

.avatarMini {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 4px;
}

.roleTag {
  font-size: 12px;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 4px;
  padding: 0 4px;
  margin-left: 4px;
}

.removeBtn {
  background: none;
  border: none;
  font-size: 16px;
  color: red;
}