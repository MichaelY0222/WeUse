.background {
  display: grid;
  width: 300rpx;
  height: 410rpx;
  background-color: #EBC542;
  border-radius: 40rpx;
  margin: 10rpx;
}

.image {
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  width: 280rpx;
  height: 280rpx;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}

.bottom {
  margin: -10rpx 0rpx 0rpx 10rpx;
  width: 284rpx;
  height: 120rpx;
  background-color: white;
  border-radius: 0rpx 0rpx 30rpx 30rpx;
  padding-top: 0rpx;
}

.name {
  color: black;
  font-size: 24rpx;
  font-weight: bold;
  padding-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;

  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.price-tag {
  margin-top: 20rpx;
}
.price {
  color: green;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 60rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.grade-tag{
  margin: -46rpx 0rpx 0rpx 74rpx;
  width: 210rpx;
  height: 60rpx;
  background-color: #EBC542;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
  padding-top: 0rpx;
}

.grade-text{
  width: 10rpx;
  font-size: 21rpx;
  color: white;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 6rpx;
}