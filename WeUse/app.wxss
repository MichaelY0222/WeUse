/**app.wxss**/
@import "global-colors.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  z-index: 1;
  overflow-x: hidden;
}

.heading{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 20pt;
  text-align: left;
  font-weight: bold;
  padding-left: 15px;
  padding-top: 5px;
  padding-right: 15px;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.subheading{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 15pt;
  text-align: left;
  font-weight: bold;
  padding-left: 15px;
  padding-top: 10px;
}

.subtext{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 12px;
  font-weight: bold;
  padding-top: 10px;
  text-align: center;
}

.subtextBlue{
  color: blue;
  margin-right: 25px;
  text-align: right;
  font-weight: bold;
}

.iconscan{
  width: 45px; /* Adjust the width and height as needed */
  height: 45px;
  background-color: white;
  border: 1px solid black;
  border-radius: 10px;
}

.iconField{
  width: 45px; /* Adjust the width and height as needed */
  height: 45px;
  margin-top: 10px;
  border-radius: 10px;
}

.button{
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 11px;
  background-color: #D2E3FA;
  padding-top: 5px;
  width: 138px;
  height: 48px;
}

.input{
  border-radius: 10px;
  background-color: #D2E3FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 15pt;
  font-weight: bold;
    width: 88%;
    margin: 0 3%;  
    padding: 15px;
    padding-left: 10px; 
    padding-top: 10px;
    text-align: left;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.switch{
  border-radius: 10px;
  background-color: #D2E3FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 12pt;
  font-weight: bold;
  width: 89%;
  margin: 0 3%;  
  padding: 10px;
  text-align: left;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.space{
    padding-top: 5px;
}

.spacelast{
    padding-top: 20px;
}

.lockIcon{
  width: 30vw;
  height: 15vh;
}

.weUseLogo{
  margin-left: 10px;
  width: 150px;
  height: 50px;
}

.weUseSlogan{
  display: flex;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 20px;
}

.footnotes{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  position: fixed;
  text-align: center;
  bottom: 30rpx;
  left: 0;
  right: 0;
}

text, input {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  color: var(--primary);
}

.big-title-text {
  font-size: 34px;
  font-weight: bold;
}

.heading-text {
  font-size: 22px;
  font-weight: bold;
}

.big-title-sub-text {
  font-weight: 400;
  font-size: 17px;
  color: var(--secondary);
  line-height: 20px;
}

.subtext {
  text-align: center;
  color: var(--secondary);
  font-size: 15px;
  line-height: 18px;
}

.admin-button {
  width: 41px;
  height: 41px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--subcontainer-background);
  border-radius: 50%;
}

.admin-image {
  height: 20px;
  width: 17px;
}

@media (prefers-color-scheme: dark) {
  .admin-image {
    filter: invert();
  }
}