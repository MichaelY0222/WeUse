/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  z-index: 1;
  overflow-x: hidden;
}

.heading{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 20pt;
  text-align: left;
  font-weight: bold;
  padding-left: 15px;
  padding-top: 20px;
  padding-right: 15px;
  justify-content: space-between;
  display: flex;
}

.subheading{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 15pt;
  text-align: left;
  font-weight: bold;
  padding-left: 15px;
  padding-top: 10px;
}

.subtext{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 12px;
  font-weight: bold;
  padding-top: 10px;
  text-align: center;
}
